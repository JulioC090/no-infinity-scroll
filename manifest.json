{
  "$schema": "https://www.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "No Infinity Scroll",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "scripts/scroll-control.js",
        "scripts/navigation-observer.js",
        "scripts/youtube.js"
      ],
      "run_at": "document_idle"
    }
  ]
}